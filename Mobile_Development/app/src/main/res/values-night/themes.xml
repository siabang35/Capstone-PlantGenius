<resources>
    <!-- Base application theme. -->
    <style name="Theme.APlantGenius" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkGreen700</item>
        <item name="colorPrimaryVariant">@color/darkGray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkRed</item>
        <item name="colorSecondaryVariant">@color/turquoiseGreen</item>
        <item name="colorOnSecondary">@color/darkGray700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darkGreen700</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/darkGray</item>
        <item name="android:textColor">@color/coconut</item>
        <item name="colorOnTertiary">@color/coconut</item>
        <item name="colorAccent">@color/darkGray</item>
        <item name="colorTertiary">@color/turquoiseGreen</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/black</item>
        <item name="boxStrokeColor">@color/turquoiseGreen</item>
        <item name="hintTextColor">@color/turquoiseGreen</item>
        <item name="errorTextColor">@color/darkRed</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="errorEnabled">true</item>
        <item name="boxCornerRadiusTopStart">@dimen/box_corner</item>
        <item name="boxCornerRadiusTopEnd">@dimen/box_corner</item>
        <item name="boxCornerRadiusBottomStart">@dimen/box_corner</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/box_corner</item>
    </style>

</resources>